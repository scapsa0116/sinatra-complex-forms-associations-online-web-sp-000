<h1>Create a new Owner</h1>
 <form action="/owners" method="POST">
 <label>Name:</label>
 <br>
 <input type="text" name="owner[name]" id="owner_name">
 
 <p>Select an existing pet or create a new one below.</p>
 


<lable><h2>Pets</h2></lable>
<% @pets.each do |pet| %>
<lable><%=pet.name%></lable>
<input type="checkbox" name="owner[pet_ids][]" id="pet_<%= pet.id %>" value="<%= pet.id %>">
<%= pet.name %>
<% end %>

<br><br>
  <h3>New Pet</h3>
  <lable>Name:</lable>
  <input type="text" name="pet[name]" id="pet_name">
  <input type="submit" id="submit" value="Create Owner">
 
</form>



